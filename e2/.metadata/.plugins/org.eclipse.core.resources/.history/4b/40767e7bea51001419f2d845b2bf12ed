#include <ostream>
#include <map>
#include <iomanip>
#include "bcs.h"

void print(std::ostream &output, unsigned int maxDiv) {
	std::map<std::string, float> drinks{
		{"Beer", 4.65}, {"Moass", 9.15}, {"Schnapps", 3.85}, {"Soda", 2.95}
	};

	auto it = drinks.find(0);

	while (it != drinks.end()) {
		output << it->first;
		for (int i = 1; i <= 10; i++) {
			output << "\t" << it->second * i;
		}
	}
}
