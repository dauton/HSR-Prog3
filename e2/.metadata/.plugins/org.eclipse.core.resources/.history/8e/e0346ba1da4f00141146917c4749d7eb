#include <iostream>
#include "charc.h"

unsigned int countNonWhitespaceChars(std::istream &input) {
	unsigned int nonWhitespaceChars{0};
	char c{};

	while (input.get(c)) {
		bool isNotWhiteSpace{!std::isspace(c)};

		if (isNotWhitespace) {
			nonWhitespaceChars++;
		}
	}

	return nonWhitespaceChars;
}

int main() {
    std::string string;

    std::cout << "Your input: \n";

    std::getline(std::cin, string);

    int count = 0;

    for (char c : string) {
        if (c != ' ') {
            count++;
        }
    }

    std::cout << "The string contains " << count << " non-whitespace characters.\n";
}
