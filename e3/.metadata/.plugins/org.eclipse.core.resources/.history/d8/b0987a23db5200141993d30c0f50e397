#include "calc.h"
#include "sevensegdisplay.h"
#include <iostream>
#include <stdexcept>
#include <sstream>
using namespace std;

int main() {
	while (cin) {
		try {
			istringstream in (to_string(calc(cin)));
			printLargeDigits(in, cout);
		} catch (...) {
			printError(cout);
			//cout << "ERROR";
			cin.clear();
			string line{};
			getline(cin, line);
		}
	}
}
