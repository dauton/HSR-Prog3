#include "calc.h"
#include "sevensegdisplay.h"
#include <iostream>
#include <stdexcept>
#include <sstream>
using namespace std;

int main() {
	while (cin) {
		try {
			istringstream in{};
			auto result = calc(cin);
			istringstream >> result;
			ostringstream out {};
			printLargeDigits(in, out);
			cout << cout << '\n';
			//printLargeDigits(cin, cout);
			//cout << "\n";
		} catch (...) {
			cout << "ERROR";
			cin.clear();
			string line{};
			getline(cin, line);
		}
	}
}
