#include "pocketcalculator.h"
#include <iostream>
#include <stdexcept>

void runPocketCalculator(std::istream &in, std::ostream &out) {
	while (in) {
		try {
			std::cout << calc(in) << "\n";
			//int result = calc(cin);
			//istringstream in (to_string(calc(cin)));
			//printLargeDigits(result, cout);
		} catch (...) {
			//printError(cout);
			//cout << "ERROR";
			in.clear();
			std::string line{};
			std::getline(in, line);
		}
	}
}
