#include <iostream>
#include <stdexcept>
#include "pocketcalculator.h"
#include "calc.h"

void runPocketCalculator() {
	while (std::cin) {
		try {
			out << calc(in) << "\n";
			//int result = calc(cin);
			//istringstream in (to_string(calc(cin)));
			//printLargeDigits(result, cout);
		} catch (...) {
			//printError(out);
			out << "ERROR";
			in.clear();
			std::string line{};
			std::getline(in, line);
		}
	}
}
