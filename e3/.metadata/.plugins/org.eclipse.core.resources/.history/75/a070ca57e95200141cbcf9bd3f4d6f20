#include <iostream>
#include <stdexcept>
#include "pocketcalculator.h"
#include "calc.h"

void runPocketCalculator(std::istream &in, std::istream &out) {
	while (in) {
		try {
			out << calc(in) << "\n";
			//int result = calc(cin);
			//istringstream in (to_string(calc(cin)));
			//printLargeDigits(result, cout);
		} catch (...) {
			//printError(out);
			std::cout << "ERROR";
			std::cin.clear();
			std::string line{};
			std::getline(std::cin, line);
		}
	}
}
